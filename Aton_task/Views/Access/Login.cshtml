@model Aton_task.Models.User;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aton_task</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aton_task.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Platypi:ital,wght@0,300..800;1,300..800&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="d-flex justify-content-center align-items-center flex-column mb-3 
        position-absolute top-50 start-50 translate-middle
        rounded-3 h-50 w-25 p-3 mb-2 bg-white text-dark 
        shadow p-3 mb-5 bg-body-tertiary rounded">
    <h1>Вход</h1>
    <form asp-controller="Access" asp-action="Login" method="post">
        <div class="form-group auth">
            <label for="username">Логин</label>
                <input type="text" class="form-control w-100" asp-for="Login" name="Login" >
        </div>
            <div class="form-group auth">
            <label for="pass">Пароль</label>
            <input type="password" class="form-control" asp-for="Password" name="pass">
        </div>
        @* <label>
                <input id="flexSwitchCheckReverse" class="form-check-input" type="checkbox" asp-for="KeepLoggetIn" name="keep" />
            Быть авторизованным
        </label> *@
        <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" type="checkbox" asp-for="KeepLoggetIn" name="keep">
                <label class="form-check-label" for="flexSwitchCheckDefault">Быть авторизованным</label>
        </div>
        <div id="loginButtons">
                <button type="submit" class="btn btn-outline-secondary w-100 mt-2" id="loginButton" onclick="changeVision(this.id, logoutButton)">ВХОД</button>
        </div>

        @if (ViewData["ValidateMessage"] != null)
        {
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>